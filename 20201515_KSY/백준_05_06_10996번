//실습1_별 찍기 - 21
#include <iostream>
using namespace std;

int main(void) {
	cin.tie(NULL);
	ios::sync_with_stdio(false);

	int n; cin >> n;

	if (n == 1)
	{
		cout << "*\n";
	}
	else
	{
		for (int i = 1; i <= n; ++i)
		{
			for (int j = 0; j < n / 2 + n % 2; ++j)
			{
				cout << "* ";
			}
			cout << "\n";
			for (int j = 0; j < n / 2; ++j)
			{
				cout << " *";
			}
			cout << "\n";
		}
	}


	return 0;
}
