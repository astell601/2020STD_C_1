#include <iostream>
#include <ios>
using namespace std;

int main()
{
	cin.tie(NULL);
	ios::sync_with_stdio(false);
	
	int num;
	cin >> num;

	for (int i =0; i<num; i++)
	{
		for (int j = num; j > i + 1;j--)
			cout << " ";
		for (int k = 0; k < i+1;k++)
			cout << "*";

		cout << "\n";
	}

	return 0;
}
